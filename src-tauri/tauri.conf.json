{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "packwisely-patcher",
  "version": "0.3.0",
  "identifier": "com.packwisely-patcher.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "packwisely-patcher",
        "width": 1000,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE0MTNFRjE4QjU0RTNCOTcKUldTWE8wNjFHTzhUcENhOFAxenJzbXJHcmNkdEdUUzlNMlowMTVzWlZ3M1FUTTN6Ny9BUCs4UVAK",
      "endpoints": [
        "https://techpizza-web.nickac.dev/assets/packwisely-patcher/latest.json",
        "https://techpizza.nickac.dev/assets/packwisely-patcher/latest.json"
      ],
      "windows": {
        "installMode": "passive",
        "wix": {
          "template": "main.wxs"
        }
      }
    }
  }
}