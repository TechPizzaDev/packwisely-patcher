{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "vite",
          "fileLocation": "absolute",
          "background": {
            "activeOnStart": true,
            // Vite outputs single-line messages which can trip this up.
            "beginsPattern": "\\[vite\\]",
            "endsPattern": "(ready in )|( PM )"
          },
          "pattern": [
            {
              "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5,
            }
          ],
        }
      ]
    },
    {
      "label": "ui:build",
      "type": "npm",
      "script": "build"
    }
  ]
}